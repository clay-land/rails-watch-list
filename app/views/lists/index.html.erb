<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1614080035039-af24354a6478?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=634&q=80);">
  <div class="container">
    <h1>Betterboxd 2: The Sequel</h1>
    <p>A site to organize all your sequel watching in nicely organized lists!</p>
    <a class="btn btn-primary" href="<%= new_list_path %>">Create a New List!</a>
  </div>
</div>
<div class="container d-flex">
  <% @lists.each do |list| %>
    <div class="card m-3 border-0" style="width: 18rem;">
      <img src="https://images.unsplash.com/photo-1535016120720-40c646be5580?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" class="card-img-top" alt="Movie Poster">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title flex-grow-1"><%= list.name %></h5>
        <a href="<%= list_path(list) %>" class="btn btn-success">View List</a>
      </div>
    </div>
  <% end %>
</div>
